generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id           Int     @id @default(autoincrement())
  name         String
  age          Int?
  gender       String?
  course       String?
  year         Int?
  roomId       Int?
  email        String  @unique
  phone        String  @unique
  profileimage String?
  room         Room?   @relation(fields: [roomId], references: [id])
}

model Room {
  id         Int       @id @default(autoincrement())
  name       String
  roomNumber Int?
  capacity   Int?
  occupancy  Int       @default(0)
  type       String?
  students   Student[]
}
